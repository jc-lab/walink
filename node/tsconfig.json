{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "vitest"
    ]
  },
  "include": [
    "src/**/*.ts",
    "vitest.config.mts"
  ],
  "exclude": [
    "dist",
    "test",
    "tests",
    "node_modules"
  ]
}